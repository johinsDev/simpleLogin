extends ../layout
block content
    .row
        .col-sm-6.col-md-4.col-md-offset-4
            h1.text-center.login-title Sign up to continue to AUTHY
            if errors
                div.alert.alert-danger.alert-dismissible.show(role='alert')
                    button.close(type='button', data-dismiss='alert', aria-label='Close')
                        span(aria-hidden='true') Ã—
                    ul
                    each error, i in errors
                        li #{error.msg}
            .account-wall
                form.form-signin(method='post', action='/sign_up' , enctype='multipart/form-data')
                    input.form-control(name='name', type='text', placeholder='Enter Name', required='', autofocus='')
                    input.form-control(name='email', type='email', placeholder='Enter Email', required='')
                    input.form-control(name='username', type='text', placeholder='Enter username', required='')
                    input.form-control(name='password' , type='password', placeholder='Password', required='')
                    input.form-control(name='password_confirmation', type='password', placeholder='Password Confirmation', required='')
                    .form-group
                        label Image Profile
                        input.form-control(type='file', name='avatar', required='')
                    button.btn.btn-lg.btn-primary.btn-block(type='submit')
                        | Sign up
                    a.pull-right.need-help(href='/sign_in') have account?
